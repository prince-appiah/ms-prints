<h1 class="mt-3 text-center">Create New Product</h1>

<div class="container mt-5 col-sm-9 col-md-11 col-lg-8">
    <form action="/admin/products/create" method="POST" enctype="multipart/form-data">

        <div class="form-group">
        <label for="image" class="col-form-label"> Product Image:</label>
            <div class="">
                <input name="image" type="file" class="form-control" multiple required>
            </div>
        </div>

        <div class="form-group">
        <label for="name" class="col-form-label"> Product Name:</label>
            <div class="">
                <input name="name" type="text" class="form-control " placeholder="Name of Product" required>
            </div>
        </div>


        <div class="form-group"> 
            <label for="price" class="col-form-label"> Price:</label>
            <div class="">
                <input name="price" type="number" class="form-control" placeholder="$99.99" required>
            </div>
        </div>

        <div class="form-group">
            <label for="size" class="col-form-label">Size:</label>
            <div class="">
                <select name="size" class="form-control" id="size">
                    <option value="Small">Small</option>
                    <option value="Medium">Medium</option>            
                </select>
            </div>
        </div>

        <div class="form-group">
        <label for="quantity" class="col-form-label"> Quantity</label>
            <div class="">
                <input name="quantity" type="number" class="form-control" required>
            </div>
        </div>

        <div class="form-group">
            <label for="description" class="col-form-label">Product Details:</label>
                <textarea name="description" type="text" cols="20" rows="10" class="form-control" placeholder="Describe your product" required></textarea>
        </div>

        <button class="btn btn-dark" type="submit">Create Product</button>
    </form>

</div>