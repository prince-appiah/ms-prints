<h1 class="mt-3 text-center">Update Product</h1>

<div class="container mt-5 col-sm-9 col-md-11 col-lg-8">
    <form action="/admin/products/edit/{{product.id}}?_method=PUT" method="POST" enctype="multipart/form-data">

        <div class="form-group">
        <label for="image" class="col-form-label"> Product Image:</label>
            <div class="">
                <input name="image" type="file" class="form-control" multiple>
            </div>
        </div>

        <div class="form-group"> 
            <label for="name" > Product Name:
                <input name="name" type="text" value="{{product.name}}" class="form-control" placeholder="Name of Product">
            </label>
        </div>

        <div class="form-group"> 
            <label for="price"> Price:
                <input name="price" type="number" value="{{product.price}}" class="form-control" placeholder="$99.99">
            </label>
        </div>

        <div class="form-group">
            <label for="size">Size
                <select name="size" class="form-control" id="size">
                    <option value="sm">Small</option>
                    <option value="md">Medium</option>            
                </select>
            </label>
        </div>

        <div class="form-group">
            <label for="quantity"> Quantity
                <input name="quantity" type="number" value="{{product.quantity}}" class="form-control">
            </label>
        </div>

        <div class="form-group">
            <label for="description">Product Details:</label>
                <textarea name="description" type="text" cols="20" rows="10" class="form-control" placeholder="Describe your product">{{product.description}}</textarea>
        </div>


        <button class="btn btn-dark" type="submit">Update Product</button>
    </form>

</div>