
<div class="container">
    <h1>Admin Page</h1>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Size</th>
                    <th>Quantity</th>
                </tr>
            </thead>

            <tbody>
                {{#each products}}
                <tr>
                    <td>{{name}}</td>
                    <td> ${{price}}</td>
                    <td>{{size}}</td>
                    <td>{{quantity}}</td>

                    <td>
                        <a href="/admin/products/edit/{{id}}" class="btn btn-info">Edit</a>
                    </td>
                    <td>
                        <form action="/admin/products/delete/{{id}}?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger">DELETE</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
