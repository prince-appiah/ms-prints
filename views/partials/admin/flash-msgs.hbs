
<div class="container">
    {{#if error}}
        <div class="alert alert-danger text-center">
            {{error}}  
        </div>
    {{/if}}

    {{#if error_msg}}
        <div class="alert alert-danger text-center">
            {{error_msg}}
        </div>
    {{/if}}

    {{#if success_msg}}
        <div class="alert alert-success text-center">
            {{success_msg}}
        </div>
    {{/if}}

    {{#if info_msg}}
        <div class="alert alert-info text-center">
            {{info_msg}}
        </div>
    {{/if}}

</div>